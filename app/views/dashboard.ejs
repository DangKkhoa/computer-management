                            <tr>
                                <td class="border-r border-slate-300 "><a href="" ><img src="/images/user.png" alt="" class="w-7 h-7 m-auto"></a></td>
                                <td class="border-r border-slate-300 text-center">staff@gmail.com</td>
                                <td class="border-r border-slate-300 text-center">Staff</td>
                                <td class="text-center">10100</td>
                            </tr>
                        </tbody>
                    </table>
                <% } %>
                </div>
            </div>
        </main>
    </div>
    
    <script>
        const ctx = document.getElementById('myChart');
      
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
                datasets: [{
                label: '# of Votes',
                data: [12, 19, 3, 5, 2, 10, 3, 18, 20, 100, 11, 12],
                borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                },
                plugins: {
                    legend: {
                        labels: {
                            color: 'rgb(25, 99, 132)'
                        },
                        
                        // fullsize: true,
                    }
                },
            },

        });
      </script>
</body>
</html>